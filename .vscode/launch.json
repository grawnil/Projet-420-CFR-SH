    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Joystick Emulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devel/lib/robot_pkg/joystick_emulator",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/devel/lib/robot_pkg",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch Robot Controller",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devel/lib/robot_pkg/robot_controller",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/devel/lib/robot_pkg",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}